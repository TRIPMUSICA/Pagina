    <div class="container mx-auto px-4 py-16">
      <div class="flex justify-end mb-8">
        <button class="search-close p-2" aria-label="Cerrar búsqueda">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
      
      <form class="search-form">
        <div class="relative">
          <input type="text" placeholder="Buscar artistas, lanzamientos, noticias..." class="w-full bg-transparent border-b-2 border-white text-white text-2xl py-4 px-2 focus:outline-none focus:border-trip-accent">
